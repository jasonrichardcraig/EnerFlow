<UserControl x:Class="EnerFlow.Views.UserControls.Setup.AnalogIoTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnerFlow.Views.UserControls.Setup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Orientation="Horizontal"
                    ToolTip="Analog IO Tag"
                    Grid.Column="0"
                    Grid.Row="0">
            <Image Height="24"
                   Width="24"
                   Source="/Images/AnalogIoTag_24x24.png"
                   Margin="10,10,4,10" />
            <TextBlock Text="{Binding Name}"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="4,10,10,10" />
        </StackPanel>

        <!-- Tab Control Section -->
        <TabControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <!-- General Tab -->
            <TabItem HeaderTemplate="{StaticResource GeneralTabHeaderDataTemplate}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0"
                           Content="Name:"
                           Margin="10" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10" VerticalAlignment="Center">
                        <TextBox Style="{StaticResource ValidatedTextBoxStyle}"
                                 Text="{Binding Name, ValidatesOnNotifyDataErrors=True}"/>
                    </StackPanel>
                    <Label Grid.Row="1" Grid.Column="0"
                           Content="Description:"
                           Margin="10" />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Style="{StaticResource ValidatedTextBoxStyle}"
                             Text="{Binding Description, ValidatesOnNotifyDataErrors=True}"
                             HorizontalScrollBarVisibility="Disabled"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Margin="10,10,10,20" />
                </Grid>
            </TabItem>
            <TabItem HeaderTemplate="{StaticResource ScalingTabHeaderDataTemplate}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <GroupBox Header="Unscaled"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  Padding="10"
                                  Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- UnscaledMinimum -->
                                <TextBlock Text="Minimum"
                                           Grid.Column="0"
                                           Margin="10"/>
                                <TextBox Grid.Column="1"
                                         Grid.Row="0"
                                         Style="{StaticResource ValidatedTextBoxStyle}"
                                         Text="{Binding UnscaledMinimum, Mode=TwoWay, NotifyOnValidationError=True}"
                                         Margin="10"/>
                                <!-- UnscaledMaximum -->
                                <TextBlock Grid.Row="1"
                                           Text="Maximum"
                                           Margin="10"/>
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Style="{StaticResource ValidatedTextBoxStyle}"
                                         Text="{Binding UnscaledMaximum, ValidatesOnNotifyDataErrors=True}" 
                                         Margin="10"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Scaled"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  Padding="6"
                                  Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!-- ScaledMinimum -->
                                <TextBlock Text="Minimum"
                                           Grid.Column="0"
                                           Margin="10"/>
                                <TextBox Grid.Column="1"
                                         Grid.Row="0"
                                         Style="{StaticResource ValidatedTextBoxStyle}"
                                         Text="{Binding ScaledMinimum, Mode=TwoWay, NotifyOnValidationError=True}"
                                         Margin="10"/>
                                <!-- ScaledMaximum -->
                                <TextBlock Grid.Row="1"
                                           Text="Maximum"
                                           Margin="10"/>
                                <TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         Style="{StaticResource ValidatedTextBoxStyle}"
                                         Text="{Binding ScaledMaximum, ValidatesOnNotifyDataErrors=True}"
                                         Margin="10"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Scaling Behaviour"
                                  Grid.Column="0"
                                  Grid.Row="2"
                                  Padding="6"
                                  Margin="10">
                            <CheckBox Content="Clamp Scaled Value"
                                      IsChecked="{Binding ClampScaledValue}"
                                      Margin="10"/>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
